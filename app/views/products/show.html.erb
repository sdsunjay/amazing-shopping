<p><%= link_to 'Edit', edit_product_path(@product) %></p>
<p><%= link_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Style:</strong>
  <%= @product.style %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand %>
</p>

<p>
  <strong>Url:</strong>
  <%= @product.url %>
</p>

<p>
  <strong>Type:</strong>
  <%= @product.product_type %>
</p>

<p>
  <strong>Shipping price:</strong>
  <%= @product.shipping_price %>
</p>

<p>
  <strong>Note:</strong>
  <%= @product.note %>
</p>

<p>
  <strong>User:</strong>
  <%= link_to @name, user_path(@product.user.id) %>
</p>
<% if @inventories.present? %>
<p><strong>Inventories:</strong><%= render 'partials/inventories', inventories: @inventories %>
</p>
<% end %>
<% if @orders.present? %>
<p><strong>Orders:</strong><%= render 'partials/orders', orders: @orders %>
</p>
<% end %>


